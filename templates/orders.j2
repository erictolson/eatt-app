	<h1>Browse Orders</h1>
	<div id="browse">
		<p><a href="#" onClick="newOrders()">Add Order</a> </p>
		<table border="1" cellpadding="5">
			<!-- Access data tuple passed from app.py -->
			{% if data %}
			<table class="table table-striped">
  				<thead class="thead-dark">
				<tr>
					<!-- Iterate through each key in the first entry to get the column name -->
					{% for key in data[0].keys() %}

					<!-- Create a <th> tag with the key inside of it, this will be our header row -->
					<th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>

					<!-- End of this for loop -->
					{% endfor %}
					<th></th>
					<th></th>
				</tr>

			<tbody>
				<!-- Now, iterate through every item in data -->{% for item in data %}
				<tr>
					<!-- Then iterate through every key in the current item dictionary -->
					{% for key in item.keys() %}

					<!-- Create a <td> element with the value of that key in it -->
					<td> {{item[key]}} </td>
					{% endfor %}
				</tr>
				{% endfor %}
				{% endif %}
		</table>
		<p>&nbsp;</p>
	</div>  <!-- browse -->

	<div id="insert">
		<!-- form to INSERT new data into Orders-->
		<form id="insertOrders" action="/orders" method="post">
			<legend><strong>Add Order</strong></legend>
			<fieldset>
				<!-- placeholder shows ghost text, required forces an input, pattern forces input adherence -->
			
				<label for="order_total">Order Total:</label>
				<input type="number" step="any" class="form-control" id="order_total" name="order_total" placeholder="" required>

				<label for="is_delivery">Is Delivery:</label>
				<input type="number" class="form-control" id="is_delivery" name="is_delivery" placeholder="" required>

                <label for="customerID">Customer ID:</label>
				<input type="number" class="form-control" id="customerID" name="customerID" placeholder="" required>

                <label for="driverID">Driver ID:</label>
				<input type="number" class="form-control" id="driverID" name="driverID" placeholder="" required>

                <label for="discountID">Discount ID:</label>
				<input type="number" class="form-control" id="discountID" name="discountID" placeholder="" required>

                <label for="credit_card">Discount ID:</label>
				<input type="number" class="form-control" id="credit_card" name="credit_card" placeholder="" required>

			</fieldset>

			<!-- Create 'Add Order' and 'Cancel' buttons -->
			<input type="submit" value="Add Order" name="Add_Orders" class="btn btn-primary"
				style="margin:.5rem;">
			<input class="btn" type="button" value="Cancel" onClick="browseOrders()">
		</form>
	</div>
